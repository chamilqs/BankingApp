@using BankingApp.Infrastructure.Identity.Entities;
@model List<ApplicationUser>
@{
    ViewData["Title"] = "Usuarios";
}

<h1 class="text-center">Usuarios</h1>

<div>
    <a asp-controller="Admin" asp-action="Register" class="btn btn-success">Add new user</a>
</div>

<table class="table table-hover mt-4">
    <thead>
        <tr>
            <th class="text-center">
                Name
            </th>
            <th class="text-center">
                Last Name
            </th>
            <th class="text-center">
                Email
            </th>
            <th class="text-center">
                Username
            </th>
@*             <th class="text-center">
                User Type
            </th> *@
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count == 0 || Model == null)
        {
            <tr>
                <td colspan="2" class="text-center">
                    Theres no users to show
                </td>
            </tr>
        }
        else
        {
            @foreach (ApplicationUser item in Model)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
@*                     <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Role)
                    </td> *@
                    <td>
                        <a asp-controller="Admin" asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                        @* <a asp-controller="Admin" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a> *@
                    </td>
                </tr>
            }
        }


    </tbody>
</table>


